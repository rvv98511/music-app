<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMusicItem"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/music_items_gradient"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageViewSongIcon"
        android:src="@drawable/music_icon"
        android:padding="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageViewSongIcon"
        android:layout_marginStart="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song name"
            android:textColor="#FFFFFF"
            android:id="@+id/textViewSongTitle"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/imageViewMenuDots"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singer"
            android:textColor="#FFFFFF"
            android:id="@+id/textViewSongSinger"
            android:layout_below="@+id/textViewSongTitle"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/imageViewMenuDots" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageViewMenuDots"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu_dots" />

    </RelativeLayout>

</RelativeLayout>